<mvc:View
	controllerName="poChangeApp.controller.Welcome"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		showHeader="true"
		title="{i18n>welcomeHeadline}"
		class="customBackground">
		<customHeader>
			<Bar>
				<contentLeft>
					<Button
						icon="sap-icon://menu2"
						press="onShowPO"
						visible="{device>/system/phone}"/>
				</contentLeft>
				<contentMiddle>
					<Title
						level="H2"
						tooltip="{i18n>welcomeDescription}"
						text="{i18n>welcomeHeadline}"/>
				</contentMiddle>
				<contentRight>
					<Button
						icon="sap-icon://customer"
						press="onAvatarPress"
						tooltip="{i18n>avatarButtonTooltip}"/>
				</contentRight>
			</Bar>
		</customHeader>
		
	</Page>
</mvc:View>