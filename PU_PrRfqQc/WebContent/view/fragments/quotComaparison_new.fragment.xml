										TextAlign="Center" demandPopin="true">
										<Text text="Delievery Date" />
									</Column>
									<Column hAlign="Center" minScreenWidth="Tablet" popinDisplay="Inline"
										TextAlign="Center" demandPopin="true">
										<Text text="Net Price" />
									</Column>
									<Column hAlign="Center" minScreenWidth="Tablet" popinDisplay="Inline"
										TextAlign="Center" demandPopin="true">
										<Text text="Price/Unit" />
									</Column>
									<Column hAlign="Center" minScreenWidth="Tablet" popinDisplay="Inline"
										TextAlign="Center" demandPopin="true">
